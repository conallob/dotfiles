{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "alwaysThinkingEnabled": false,
  "enabledPlugins": {
    {{- /* Github API plugin */}}
    "github@claude-plugins-official": true,
    {{- /* LSP Servers */}}
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    {{- /* Git Commit Commands */}}
    "commit-commands@claude-plugins-official": true
  },
  "hooks": {
    {{- /* Native system notifications when Claude is waiting for input */}}
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            {{- /* macOS native notification with Claude app icon */}}
            "command": "osascript -e 'tell application \"Claude\" to display notification \"Claude has completed the task and is awaiting your input\" with title \"Claude Code\"'"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            {{- /* Alert when Claude needs permission with Claude app icon */}}
            "command": "osascript -e 'tell application \"Claude\" to display notification \"Claude needs your permission to proceed\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            {{- /* Terminal bell when Claude finishes responding */}}
            "command": "printf '\\a'"
          }
        ]
      }
    ]
  }
}
