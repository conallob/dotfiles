{
  "mcpServers": {
    # Obsidian.md via MCP
    "obsidian-mcp-tools": {
      "command": "Users/{{- .chezmoi.username -}}/Documents/Multiverse/.obsidian/plugins/mcp-tools/bin/mcp-server",
      "env": {
        "OBSIDIAN_API_KEY": '{{- (onepasswordDetailsFields "xe6ncd3wlggzxt6lq7zv3mduly").credential.value }}'
      }
    },
    # Omnifocus via MCP, https://github.com/themotionmachine/OmniFocus-MCP
    "omnifocus": {
      "command": "npx",
      "args": ["-y", "omnifocus-mcp"]
    },
    "Home Assistant - Taku": {
      "command": "mcp-proxy",
      "args": [
        "https://api.taku.ie/mcp_server/sse"
      ],
      "env": {
        "API_ACCESS_TOKEN": '{{- (onepasswordDetailsFields "mtsvdobrdd3qsztkds33okg6by").credential.value }}'
      }
    },
    # https://github.com/conallob/mcp-ssh-wingman
    "ssh-wingman": {
      "command": "/usr/local/bin/mcp-ssh-wingman",
      "args": ["--session", "mcp-wingman"]
    }
  }
}
