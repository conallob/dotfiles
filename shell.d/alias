# vim: filetype=sh

alias vim="vim -X"

# Enable OSX aliases
if [ "$(uname -s)" == "Darwin" ];
then
  source "${CONFIGS}/alias.osx"
fi

# Enable FreeBSD aliases
if [ "$(uname -s)" == "FreeBSD" ];
then
  source "${CONFIGS}/alias.freebsd"
fi

# Enable Linux aliases
if [ "$(uname -s)" == "Linux" ];
then
  source "${CONFIGS}/alias.linux"
fi

# Enable host specific aliases
if [ -e "${CONFIGS}/alias.$(hostname -s)" ];
then
  source "${CONFIGS}/alias.$(hostname -s)"
fi
